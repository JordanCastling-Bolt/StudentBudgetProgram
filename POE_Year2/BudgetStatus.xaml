<Window x:Class="POE_Year2.BudgetStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE_Year2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True"
        Title="Budget Report" Height="377" Width="340">
    <Grid>
        <StackPanel Name="StackPanel" Background="LightSlateGray"  Margin="0,0,0,5" Opacity="1">
            <StackPanel.Effect>
                <DropShadowEffect/>
            </StackPanel.Effect>
        </StackPanel>
        <Button Content="Exit" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="Courier New" FontSize="14" Margin="0,315,0,0" Height="25" Width="69" Click="ExitBTN"/>
    </Grid>
</Window>
