<Window x:Class="POE_Year2.NewLoan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POE_Year2"
        WindowStartupLocation="CenterScreen" SnapsToDevicePixels="True"
        mc:Ignorable="d"
        Title="New Loan" Height="138" Width="281.754" FontFamily="Courier New">
    <StackPanel Margin="0,0,0,4">
        <TextBlock Text="Please choose a type of loan:" Height="27" FontFamily="Courier New" />
        <ComboBox Width="144" HorizontalAlignment="Left" x:Name="Loan_Choice" >
            <ComboBoxItem Content="Home Loan" IsSelected="True" x:Name="Home_Loan"/>
            <ComboBoxItem Content="Vehicle Loan" x:Name="Vehicle_Loan"/>
        </ComboBox>
        <Button TabIndex="1" Content="OK" Click="OKButton_Click" Margin="0,5,10.2,0" HorizontalAlignment="Right" Width="76" />
    </StackPanel>
</Window>

